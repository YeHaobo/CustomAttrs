<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ImageShow">
        <attr name="text" format="string" />
        <attr name="text_size" format="dimension" />
        <attr name="text_color" format="color"/>
        <attr name="text_gravity" format="enum" >
            <enum name="center" value="1"/>
            <enum name="start" value="2"/>
            <enum name="end" value="3"/>
        </attr>
        <attr name="src" format="string"/>
        <attr name="res" format="reference"/>
        <attr name="image_height" format="dimension"/>
        <attr name="image_width" format="dimension"/>
    </declare-styleable>


</resources>